// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Calendar {
  year     Int       @id
  holidays Json
  planner  Planner[]
}

model Planner {
  id           Int      @id @default(autoincrement())
  name         String
  start_date   DateTime
  activities   Json
  calendar     Calendar @relation(fields: [calendarYear], references: [year])
  calendarYear Int
}

model Template {
  id         Int    @id @default(autoincrement())
  name       String
  activities Json
}
